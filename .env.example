# ===========================================
# БАЗА ДАННЫХ (PostgreSQL)
# ===========================================
POSTGRES_USER=your_username_here
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=portfolio_db
DATABASE_URL=postgresql://your_user:your_secure_password_here@db:5432/portfolio_db

# ===========================================
# JWT НАСТРОЙКИ
# ===========================================
# Время жизни токенов
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# GEMINI API (Google AI Studio)
# ===========================================
# Получить ключ: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash  # или gemini-1.5-pro (медленнее, но качественнее)

# ===========================================
# ПРИЛОЖЕНИЕ
# ===========================================
# Для продакшна установите в 'production'
ENVIRONMENT=development

# CORS настройки (разрешенные origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ===========================================
# ЛОГИРОВАНИЕ
# ===========================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ===========================================
# RATE LIMITING (опционально)
# ===========================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000